<Window x:Class="Zelegram.Views.CreateChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zelegram.Views"
        mc:Ignorable="d" Background="Aquamarine"
        Title="CreateChatWindow" Height="200" Width="300">
    <StackPanel Margin="10">
        <Label Margin="10" >Username :</Label>
        <TextBox x:Name="AddedUserName"  Margin="10" ></TextBox>
        <Button Margin="10" Click="Button_Click" >Create Chat</Button>
    </StackPanel>
</Window>
